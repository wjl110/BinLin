.footer {
  height: 5rem;
  width: 100%;
  background: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: row;
  position: absolute;
  bottom: 0px;
}

.logo {
  width: 60px;
  height: 60px;
  margin-right: 1rem;
}
.logo image {
  width: 100%;
  height: 100%;
}

.VideoPlace {
  position: fixed;
  height: 100%;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #cecece;
}
.VideoPlace > video {
  min-width: 160%;
  min-height: 160%;
}

.skip {
  z-index: 1;
  position: absolute;
  background: rgba(255, 255, 255, 0.7);
  padding: 10px;
  padding-top: 6px;
  padding-bottom: 6px;
  border-radius: 100px;
  right: 10px;
  top: 20px;
  font-size: 14px;
}

.shade {
  background: #fff;
  top: 0px;
  left: 0px;
  width: 100%;
  height: 100%;
  z-index: 100;
  position: absolute;
}
