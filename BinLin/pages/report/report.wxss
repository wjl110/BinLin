page {
  background: #f5f5f5;
}

.section {
  background: #fff;
  padding: 5px;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  margin-top: 15px;
}

.content {
  box-sizing: border-box;
  width: 100%;
  height: 100px;
}
.content > textarea {
  width: 100%;
  height: 100%;
}

.error-message {
  color: #f00;
}

.post{
  display:flex;
  flex-direction: row;
  line-height:16px;
  margin-top: 100px;
}
.post > button {
  width:80px;
  height: 50px;
  flex-direction:row;
  vertical-align:middle;
  color:white;
  background-color: #408080;
}

.section1{
  width: 100%;
  height:100rpx;
